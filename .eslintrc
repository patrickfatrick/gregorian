{
	"rules": {
		"indent": [
			2,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"quotes": [
			2,
			"single"
		],
		"linebreak-style": [
			2,
			"unix"
		],
		"semi": [
			2,
			"always"
		]
	},
	"env": {
		"es6": true
	},
	"ecmaFeatures" :{
		"arrowFunctions": true,
		"blockBindings": true,
		"modules": true,
		"forOf": true
	},
	"extends": "eslint:recommended"
}